@model IEnumerable<MovieDatabase.Models.Movie>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary" style="color:white!important;"> Movies List </h2>
        </div>
        <div class="col-6 text-sm-end">
           <a asp-controller="Movie" asp-action="Create" class="btn btn-primary" >
           <i class="bi bi-plus-circle"></i> &nbsp; Add a new movie
            </a>
        </div>
    </div>
</div>

<br/><br/>
<div class="container p-3">
@if(Model.Count() > 0)
{
    <table class="table table-bordered table-striped text-center" style="width: 100%">
        <thead >
            <tr class="table-primary"> 
                <th>
                    Cover
                </th>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Year
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Rating
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr class="table-dark">
                    <td width="20%">
                        <img alt="image" src="~/Images/@obj.ImgName" class="img-fluid "/>
                    </td>
                    <td width="20%" class="display-6">@obj.Title</td>
                    <td width="30%">@obj.Description</td>
                    <td width="10%">@obj.Year</td>
                    <td width="10%">@obj.Gender</td>
                    <td width="20%">@obj.Rating</td>
                    <td class="text-center">
                        <div class="w-150 btn-group" role="group">
                            <a asp-controller="Movie" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary">
                              <i class="bi bi-pencil-square"></i> &nbsp; Edit
                            </a>
                             <a asp-controller="Movie" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                               <i class="bi bi-trash"></i> &nbsp; Delete
                            </a>
                        </div>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
    }
else
    {
        <p>No Movie exists</p>
    }
    </div>


