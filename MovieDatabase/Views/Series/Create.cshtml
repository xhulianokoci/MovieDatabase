@model MovieDatabase.Models.Series


@{
    ViewData["Title"] = "Create";
}


<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="border p-3 mt-4 mb-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <div class="form-group row">
            <h2 class="text-info p-lg-3">Add Serie</h2>
        </div>
    
    <div class="row">
        <div class="col-8">
            <div class="form-group row p-2">
                <div class="col-4 h5">
                    <label for="image">Serie Cover Image</label>
                </div>
                <div class="col-8">
                <input type="file" asp-for="Image" class="form-control-file" id="exampleFormControlFile1" >
                <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                
            </div>
            
            <div class="form-group row p-2">
                <div class="col-4 h5">
                   <label asp-for ="Title"></label> 
                </div>
                <div class="col-8">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
                
                </div>
            </div>

            <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea type="text" rows="3" asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

           <div class="form-group row p-2">
                <div class="col-4 h5">
                   <label asp-for ="Year"></label> 
                </div>
                <div class="col-8">
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
                </div>
             </div>

            <div class="form-group row p-2">
                <div class="col-4 h5">
                   <label asp-for ="CategoryId"></label> 
                </div>
                <div class="col-8">
                <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select">
                    <option disabled selected>- Select Category -</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
             </div>

            <div class="form-group row p-2">
                <div class="col-4 h5">
                   <label asp-for ="Rating"></label> 
                </div>
                <div class="col-8">
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row p-2">
                <div class="col-8 offset-4 row">

                    <div class="col">
                        <input type="submit" class="btn btn-info w-100" value="Create" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100" >
                            Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>


</form>

@section Scripts{
    @{ <partial name = "_ValidationScriptsPartial" /> }
}

